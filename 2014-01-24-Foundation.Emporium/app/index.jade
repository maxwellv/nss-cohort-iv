doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class="no-js" lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title The Emporium
    link(rel="stylesheet" href="/css/normalize.css")
    link(rel="stylesheet" href="/css/foundation.css")
    link(rel="stylesheet" href="/css/app.css")
    script(src="/js/vendor/modernizr.js")
  body
    .row
      .small-12.columns
        .panel
          h1 The Emporium
    .row
      .small-8.columns
        form
          .row
            .small-6.columns
              label Item
              input#item(type='text' placeholder='Item name' autofocus)
            .small-2.columns
              label Qty
              input#qty(type='text' placeholder='1')
            .small-2.columns
              label Amount
              input#amount(type='text' placeholder='3.50')
            .small-2.columns
              label &nbsp;
              button.small.radius#add-item Add Item

      .small-4.columns
        table
          thead
            tr
              th Item name
              th Quantity
              th Amount
              th Total
          tfoot
            tr
              td
              td 0
              td $0.00
              td $0.00
          tbody
    script(src="/js/vendor/jquery.js")
    script(src="/js/vendor/foundation.js")
    script(src="/js/source/main.js")
    script $(document).foundation();
